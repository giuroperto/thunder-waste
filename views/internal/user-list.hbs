{{#if message}}
<div class="all-messages">{{message}}</div>
{{/if}}

<h1>All Clients</h1>
<div class="d-flex">
  <div id="map1" class="align-items-end"></div>
  <div>
    <ul>
      {{#each clients}}
      <li>
        <a href="/staff/users/{{this._id}}">{{this.name}} | </a>
        <a href="/staff/users/{{this._id}}/edit">Edit |</a>
        {{#if admin}}
        <form action="/staff/users/{{this._id}}/delete" method="POST">
          <button type="submit">Delete</button>
        </form>
        {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
</div>

<a href="/staff/" class="btn btn-secondary">Home</a>